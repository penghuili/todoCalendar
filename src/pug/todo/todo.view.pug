.panel-group#todoList(ng-init="vm.init()")
  .panel.panel-primary#inboxHead
    .panel-heading
      h3.panel-title
        a(data-toggle='collapse', data-parent='#todoList', href='#inbox').
          <span class='glyphicon glyphicon-inbox'></span>
          &nbsp;Inbox
          &nbsp; <span class="badge">{{vm.inboxs.length}}</span>
    .panel-collapse.collapse#inbox
      ul.list-group
        li.list-group-item
          a(href="/#/add").
            <span class="glyphicon glyphicon-pencil"></span>
            &nbsp;Add new
        li.list-group-item(ng-repeat="inbox in vm.inboxs")
          input(type="checkbox", ng-change="vm.change('inbox')", ng-model="inbox.completed")
          a(href="todo/{{inbox.createdOn}}").
            {{inbox.name}}

  .panel.panel-primary#todayHead
    .panel-heading
      h3.panel-title
        a(data-toggle='collapse', data-parent='#todoList', href='#today').
          <span class='glyphicon glyphicon-star'></span>
          &nbsp;Today
          &nbsp; <span class="badge">{{vm.todays.length}}</span>
    .panel-collapse.collapse#today
      ul.list-group
        li.list-group-item(ng-repeat="today in vm.todays")
          input(type="checkbox", ng-change="vm.change('today')", ng-model="today.completed")
          a(href="todo/{{today.createdOn}}").
            {{today.name}}

  .panel.panel-primary#upcomingHead
    .panel-heading
      h3.panel-title
        a(data-toggle='collapse', data-parent='#todoList', href='#upcoming').
          <span class='glyphicon glyphicon-refresh'></span>
          &nbsp;Upcoming
          &nbsp; <span class="badge">{{vm.upcomings.length}}</span>
    .panel-collapse.collapse#upcoming
      ul.list-group
        li.list-group-item(ng-repeat="upcoming in vm.upcomings")
          input(type="checkbox", ng-change="vm.change('upcoming')", ng-model="upcoming.completed")
          a(href="todo/{{upcoming.createdOn}}").
            {{upcoming.name}}

  .panel.panel-primary#completedHead
    .panel-heading
      h3.panel-title
        a(data-toggle='collapse', data-parent='#todoList', href='#completed').
          <span class='glyphicon glyphicon-thumbs-up'></span>
          &nbsp;Completed
          &nbsp; <span class="badge">{{vm.completeds.length}}</span>
    .panel-collapse.collapse#completed
      ul.list-group
        li.list-group-item(ng-repeat="completed in vm.completeds")
          input(type="checkbox", ng-change="vm.change('completed')", ng-model="completed.completed")
          a(href="todo/{{completed.createdOn}}", id="{{completed.createdOn}}").
            {{completed.name}}

  .panel.panel-primary#allHead
    .panel-heading
      h3.panel-title
        a(data-toggle='collapse', data-parent='#todoList', href='#all').
          <span class='glyphicon glyphicon-tasks'></span>
          &nbsp;All
          &nbsp; <span class="badge">{{vm.alls.length}}</span>
    .panel-collapse.collapse#all
      ul.list-group
        li.list-group-item(ng-repeat="all in vm.alls")
          input(type="checkbox", ng-change="vm.change('all')", ng-model="all.completed")
          a(href="todo/{{all.createdOn}}").
            {{all.name}}
