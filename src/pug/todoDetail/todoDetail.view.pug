form(ng-submit="vm.onSubmit()")
  .panel.panel-primary
    .panel-heading
      .form-group(style="padding-top:12px;")
        input.form-control(type="text", placeholder="new task", ng-model="vm.newTask")
    .panel-body#detailPanelBody
      .checkbox
        label.
          <input type="checkbox" ng-model="vm.completed">
          Completed
      .form-group
        ul.nav.nav-tabs
          li(class="{{vm.begin.liStatus}}", data-toggle="tab")
            a(href="#", ng-click="vm.clickBegin()").
              {{vm.begin.date}}<br>
              {{vm.begin.time}}
          li
            a(href="#")
              span.glyphicon.glyphicon-chevron-right
          li(class="{{vm.end.liStatus}}", data-toggle="tab")
            a(href="#", ng-click="vm.clickEnd()").
              {{vm.end.date}}<br>
              {{vm.end.time}}
        .tab-content
          div(class="{{vm.begin.contentStatus}}")
            .form-group(style="padding-top:17px;")
              input.form-control(type="date", ng-model="vm.begin.dateRaw", ng-change="vm.change()")
            .form-group
              input.form-control#beginTime(type="time", ng-model="vm.begin.timeRaw", ng-change="vm.change()")
          div(class="{{vm.end.contentStatus}}")
            .form-group(style="padding-top:17px;")
              input.form-control#endDate(type="date", ng-model="vm.end.dateRaw", ng-change="vm.change()")
            .form-group
              input.form-control#endTime(type="time", ng-model="vm.end.timeRaw", ng-change="vm.change()")
    .panel-footer
      button.btn.btn-danger(type="button", ng-click="vm.delete()") Delete
      button.btn.btn-default(type="submit") Save
footer-generic
